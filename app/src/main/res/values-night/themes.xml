<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for the application. -->
    <style name="Theme.VoiceTodo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_dark</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <!-- Card background for dark theme -->
        <item name="cardViewStyle">@style/CardView.Dark</item>
    </style>
    
    <style name="CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
    </style>
</resources>