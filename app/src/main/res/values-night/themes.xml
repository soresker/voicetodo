<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for the application. -->
    <style name="Theme.VoiceTodo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/voice_primary</item>
        <item name="colorPrimaryVariant">@color/voice_primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/voice_secondary</item>
        <item name="colorSecondaryVariant">@color/voice_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/voice_background</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/voice_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/voice_background</item>
        <item name="colorSurface">@color/voice_surface</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Card background for dark theme -->
        <item name="cardViewStyle">@style/CardView.Dark</item>
    </style>
    
    <style name="CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/voice_surface</item>
    </style>
</resources>